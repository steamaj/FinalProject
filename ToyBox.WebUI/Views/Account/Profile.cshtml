@model ToyBox.Domain.Entities.User
@{
    ViewBag.Title = "Profile";

}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Profile</h2>




@using (Html.BeginForm("Profile", "Account"))
{
    <div class="panel">
        @Html.HiddenFor(m => m.Id)
        <div class="row">
            <div class="col-6 col-md-4" style="border: 2px solid green;">
                <div class="row" style="width: 75%;">
                    <div class="col-sm-12" style="padding: 5px 5px 5px 5px; ">
                        <img src="https://via.placeholder.com/575x500C/O https://placeholder.com/" class="img-responsive" alt="...">
                    </div>
                </div>
                <div class="form-group">
                    <!-- <input type="submit" value="Login" class="btn btn-primary" />-->
                    <button type="submit" class="btn btn-default btn-block" value="PhotoUpload">Upload Profile Photo</button>
                </div>
            </div>
            <div class="col-12 col-md-8" style="border: 2px solid yellow;">
                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="FirstName">First Name</label>
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.FirstName)

                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword4">Last Name</label>
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Email Address</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", disabled = "disabled" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-default" value="Save">Update Profile</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
}

<style type="text/css">
    .row {
        margin-left: -15px;
    }
</style>
