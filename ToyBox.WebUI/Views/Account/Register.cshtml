@model ToyBox.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="signup-form">

    @using (Html.BeginForm("SaveRegisterDetails", "Account"))
    {
        <!--<div style="color:red;">@Html.ValidationSummary() </div>-->
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div>



        <form>
            <h2>Sign Up</h2>
            <p>Please fill in this form to create an account!</p>
            <hr>

            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">@Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "First Name" }) @Html.ValidationMessageFor(a => a.FirstName)</div>

                    <div class="col-xs-6">@Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Last Name" })@Html.ValidationMessageFor(a => a.LastName)</div>
                </div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" }) @Html.ValidationMessageFor(a => a.Email)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password", type = "Password" }) @Html.ValidationMessageFor(a => a.Password)
            </div>


            <!---->
            <div class="form-group">
                @Html.TextBoxFor(a => a.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", type = "Password" }) @Html.ValidationMessageFor(a => a.ConfirmPassword)
            </div>




            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" value="Register">Sign Up</button>
            </div>
        </form>
        <div class="hint-text">Already have an account? @Html.ActionLink("Login here", "Login")</div>

    }

</div>
<head>
    <style type="text/css">
        body {
            color: #fff;
            background: orange;
            font-family: 'Roboto', sans-serif;
        }

        .row {
            margin-left: -15px;
        }

        .form-control {
            height: 41px;
            background: #f2f2f2;
            box-shadow: none !important;
            border: none;
        }

            .form-control:focus {
                background: #e2e2e2;
            }

        .form-control, .btn {
            border-radius: 3px;
        }

        .signup-form {
            width: 390px;
            margin: 30px auto;
        }

            .signup-form form {
                color: #999;
                border-radius: 3px;
                margin-bottom: 15px;
                background: #fff;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .signup-form h2 {
                color: #333;
                font-weight: bold;
                margin-top: 0;
            }

            .signup-form hr {
                margin: 0 -30px 20px;
            }

            .signup-form .form-group {
                margin-bottom: 20px;
            }

            .signup-form input[type="checkbox"] {
                margin-top: 3px;
            }

            .signup-form .row div:first-child {
                padding-right: 10px;
            }

            .signup-form .row div:last-child {
                padding-left: 10px;
            }

            .signup-form .btn {
                font-size: 16px;
                font-weight: bold;
                background: #3598dc;
                border: none;
                min-width: 140px;
            }

                .signup-form .btn:hover, .signup-form .btn:focus {
                    background: #2389cd !important;
                    outline: none;
                }

            .signup-form a {
                color: #fff;
                text-decoration: underline;
            }

                .signup-form a:hover {
                    text-decoration: none;
                }

            .signup-form form a {
                color: #3598dc;
                text-decoration: none;
            }

                .signup-form form a:hover {
                    text-decoration: underline;
                }

            .signup-form .hint-text {
                padding-bottom: 15px;
                text-align: center;
            }
    </style>
</head>
